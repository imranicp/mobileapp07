<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@drawable/menu_bg"
    android:layout_width="match_parent"
    android:layout_height="600dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent">

          <ImageView
              android:id="@+id/hlp1"
              android:src="@drawable/hlp1"
              android:layout_marginTop="10dp"
              android:layout_width="200dp"
              android:layout_height="200dp" />

          <ImageView
              android:id="@+id/hlp2"
              android:src="@drawable/hlp2"
              android:layout_below="@+id/hlp1"
              android:layout_marginTop="30dp"
              android:layout_width="200dp"
              android:layout_height="200dp" />

          <ImageView
              android:id="@+id/hlp3r"
              android:src="@drawable/hlp3r"
              android:layout_below="@+id/hlp2"
              android:layout_marginTop="30dp"
              android:layout_width="200dp"
              android:layout_height="200dp" />

          <ImageView
              android:id="@+id/hlp3l"
              android:src="@drawable/hlp3l"
              android:layout_below="@+id/hlp3r"
              android:layout_marginTop="30dp"
              android:layout_width="200dp"
              android:layout_height="200dp" />

          <ImageView
              android:id="@+id/hlp3u"
              android:src="@drawable/hlp3u"
              android:layout_below="@+id/hlp3l"
              android:layout_marginTop="30dp"
              android:layout_width="200dp"
              android:layout_height="200dp" />

          <ImageView
              android:id="@+id/hlp3d"
              android:src="@drawable/hlp3d"
              android:layout_below="@+id/hlp3u"
              android:layout_marginTop="30dp"
              android:layout_width="200dp"
              android:layout_height="200dp" />

          <ImageView
              android:id="@+id/hlp4"
              android:src="@drawable/hlp4"
              android:layout_below="@+id/hlp3d"
              android:layout_marginTop="30dp"
              android:layout_width="200dp"
              android:layout_height="200dp" />

          <TextView
              android:id="@+id/txt1"
              android:text="When you start the game, you will see seven vertical and seven horizontal bars whaich are randomly postioned in inner, outer or center positions."
              android:layout_alignParentEnd="true"
              android:layout_marginTop="20dp"
              android:layout_marginRight="10dp"
              android:textColor="#000000"
              android:layout_width="150dp"
              android:layout_height="wrap_content" />

          <TextView
              android:id="@+id/txt2"
              android:text="wwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww"
              android:layout_below="@+id/txt1"
              android:layout_marginTop="150dp"
              android:layout_marginLeft="30dp"
              android:layout_toRightOf="@+id/hlp2"
              android:textColor="#000000"
              android:layout_width="150dp"
              android:layout_height="wrap_content" />

      </RelativeLayout>
    </ScrollView>



</RelativeLayout>